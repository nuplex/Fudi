<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayout"
    android:id="@+id/processing_popup_frame"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="100dp"
        android:background="@drawable/comment_popup_background"
        android:minHeight="125dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/processing_popup"
            android:id="@+id/processing_popup_text"
            android:layout_centerInParent="true"
            android:textColor="@color/fudi_text_color"
            android:textAlignment="center"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="21sp" />
    </RelativeLayout>
</FrameLayout>