<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/standard_button_pressed_color"/>
            <corners android:radius="5dp"/>
            <padding android:bottom="2dp"
                android:top="2dp"
                android:left="3dp"
                android:right="3dp"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/standard_button_pressed_color"/>
            <corners android:radius="5dp"/>
            <padding android:bottom="2dp"
                android:top="2dp"
                android:left="3dp"
                android:right="3dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/standard_button_color"/>
            <corners android:radius="5dp"/>
            <padding android:bottom="2dp"
                android:top="2dp"
                android:left="3dp"
                android:right="3dp"/>
        </shape>
    </item>
</selector>